<h1>Productos</h1>

{{#each docs}}
  <div>
    <h3>{{this.title}}</h3>
    <p>${{this.price}}</p>

    <a href="/products/{{this._id}}">Ver detalle</a>
    <button onclick="addToCart('{{this._id}}')">
      Agregar al carrito
    </button>
  </div>
{{/each}}

{{#if hasPrevPage}}
  <a href="/products?page={{prevPage}}">Anterior</a>
{{/if}}

{{#if hasNextPage}}
  <a href="/products?page={{nextPage}}">Siguiente</a>
{{/if}}
